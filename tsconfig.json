{
  "compilerOptions": {
    "target": "ES2017",
    "module": "commonjs",
    "outDir": "./dist",
    "noEmit": true,
    "strict": false,
    "baseUrl": "./src",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "paths": {
      "@modules/*": ["modules/*"],
      "@config/*": ["config/*"],
      "@infra/*": ["infra/*"],
      "@domain/*": ["domain/*"],
      "@test/*": ["test/*"]
    }
  },
  "include": ["src"]
}