{
  "compilerOptions": {
    "target": "ES2017",
    "module": "commonjs",
    "outDir": "./dist",
    "noEmit": true,
    "strict": false,
    "baseUrl": ".",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "paths": {
      "@core/*": ["src/core/*"],
      "@config/*": ["src/config/*"],
      "@infra/*": ["src/infra/*"],
      "@domain/*": ["src/domain/*"],
      "@test/*": ["src/test/*"]
    }
  }
}