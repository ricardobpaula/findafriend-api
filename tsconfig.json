{
  "compilerOptions": {
    "target": "ES2017",
    "module": "commonjs",
    "outDir": "./dist",
    "strict": false,
    "baseUrl": ".",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "paths": {
      "@modules/*": ["./src/modules/*"],
      "@config/*": ["./src/config/*"],
      "@infra/*": ["./src/infra/*"],
      "@domain/*": ["./src/domain/*"],
      "@test/*": ["./src/test/*"]
    }
  },
  "include": [
    "src/**/*"
  ]
}